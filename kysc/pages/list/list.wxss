/* pages/list.wxss */
.list {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #eee;
}
.loading-box {
  position: fixed;
  top: 50%;
  width: 100%;
  z-index: 10;
}

.i-title-custom {
  font-size: 12px!important;
}
.i-title-current-custom {
  color: #1aad19!important;
}

.good-container {
  background-color: white;
}
.cells {
  font-size: 28rpx;
  color: #666;
}
.good-avatar {
  width: 120rpx;
  height: 120rpx; 
  border-radius: 50%;
  background-color: #eeeeee;
}
.good-info-container {
  margin-left: 20rpx;
}
.good-name {

}
.good-num-container {
  display: flex;
  flex-direction: row;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.good-selling-cnt {
  margin-left: 10rpx;
}


.detail {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  align-items: center;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.name {
  font-size: 40rpx;
}

.cnt {
  margin: 20rpx;
  padding: 10rpx;
  background-color: blue;
  color: white;
  font-size: 20rpx;
  border-radius: 20rpx;
}

.price {
  color: #f56c6c;
  font-size: 30rpx;
}

.hint-title {
  color: #f56c6c;
}
.hint-content {
  display: flex;
  flex-direction: column;
  color: #666;
  font-size: 30rpx
}

.sell {
  margin-top: 80rpx;
}