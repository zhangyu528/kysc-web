/* pages/detail.wxss */
.detail {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  align-items: center;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.name {
  font-size: 40rpx;
}

.cnt {
  margin: 20rpx;
  padding: 10rpx;
  background-color: blue;
  color: white;
  font-size: 20rpx;
  border-radius: 20rpx;
}

.price {
  color: #f56c6c;
  font-size: 30rpx;
}

.hint-title {
  color: #f56c6c;
}
.hint-content {
  display: flex;
  flex-direction: column;
  color: #666;
  font-size: 30rpx
}

.sell {
  margin-top: 80rpx;
}